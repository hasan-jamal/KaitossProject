
@model RegisterCustomerVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_layout.cshtml";
}
        <section class="section-register mt-5">
            <div class="container-padding mt-5">
                <div class="row align-items-center row-padd  row-margin">
                 
                    <div class="col-md-6 bg-white content-form p-5 shadow-lg mx-auto ">
                        <h1 class="pb-5">Customer Register</h1>
                        <div class="form-style">
                            <form role="form" asp-action="RegisterCustomer" asp-controller="Account" method="post">
                                <div class="row">
                                 <div class="col-md-6">
                                       <div class="form-group pb-3">
                                    <input  id="Name" type="text" name="Name" asp-for="Name" class="form-control" placeholder="Full Name" aria-describedby="emailHelp">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                              
                                  <div class="form-group pb-2">
                                    <input type="password" name="Password" asp-for="Password"  class="form-control" placeholder="Password"
                                        id="exampleInputPassword1">
                                          <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                 </div>

                                   <div class="col-md-6">
                              <div class="form-group pb-3">
                                    <input  id="EmailAddress" type="email" name="EmailAddress" asp-for="EmailAddress" class="form-control" placeholder="Email Address" aria-describedby="emailHelp">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                  <div class="form-group pb-2">
                                    <input type="password" name="ConfirmPassword" asp-for="ConfirmPassword"  class="form-control" placeholder="Confirm Password"
                                        id="ConfirmPassword">
                                          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                 </div>

                                </div>
                              
                                <div class="d-flex align-items-center justify-content-between flex-col pb-3">
                                    <div class="d-flex align-items-center">
                                        <input name="" type="checkbox" value="" />
                                        <span class="px-2 font-weight-bold">Remember Me</span>
                                    </div>
                                
                                </div>
                                <div class="pb-2">
                                    <button type="submit"
                                        class="btn btn-primary w-100 font-weight-bold mt-2">Register</button>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </section>